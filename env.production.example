# Production Environment Variables for Vercel
# Copy these to Vercel Dashboard → Settings → Environment Variables

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# JWT Configuration (CHANGE THIS SECRET!)
JWT_SECRET=your-super-secret-jwt-key-production-CHANGE-THIS-TO-RANDOM-STRING
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration (Replace with your actual Vercel domain)
CORS_ORIGIN=https://your-project-name.vercel.app

# Admin Configuration (CHANGE THESE!)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=change-this-secure-password

# Company Information
COMPANY_NAME=BILAL-PARTS CO.,LTD
COMPANY_EMAIL=admin@bilal-parts.com
COMPANY_PHONE=0086-18520438258
COMPANY_ADDRESS=No. 999,Asian Games Avenue,Shiqi Town,Panyu District,Guangzhou,China.
COMPANY_STOCK_CODE=02499. HK

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 1C Integration Authentication
1C_USERNAME=1c_user
1C_PASSWORD=1c_password
