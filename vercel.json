{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/1c_exchange.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/backend/1c_exchange.php",
      "dest": "/backend/1c_exchange.php"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/backend/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    },
    "backend/1c_exchange.php": {
      "maxDuration": 60
    }
  }
}
